{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "src/cli/**/*",
    "src/database/**/*",
    "src/parser/**/*",
    "src/sessions/**/*",
    "src/server/**/*",
    "src/query-events.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "src/web/**/*"
  ]
}